<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar prefHeight="13.0" prefWidth="352.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1">
  <menus>
    <Menu mnemonicParsing="false" text="_File" fx:id="file">
      <items>
            <MenuItem mnemonicParsing="false" text="New game" fx:id="newGameItem" onAction="#newGame" accelerator="Shortcut+N" />
            <MenuItem mnemonicParsing="false" text="Open labyrint" fx:id="openItem" onAction="#open" accelerator="Shortcut+O"/>
        	<MenuItem mnemonicParsing="false" text="Exit" fx:id="closeItem" onAction="#close" accelerator="Shortcut+W"/>
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="_View" fx:id="view">
    	<items>
    		<MenuItem mnemonicParsing="false" text="Toggle lights" fx:id="lightToggleItem" onAction="#toggleLights" accelerator="Shortcut+L"/>
    	</items>
    </Menu>
    <Menu mnemonicParsing="false" text="_Help" fx:id="help">
      <items>
            <MenuItem mnemonicParsing="false" text="Help/How to..." fx:id="helpItem" onAction="#help" accelerator="Shortcut+H"/>
        <MenuItem mnemonicParsing="false" text="About" fx:id="aboutItem" onAction="#about"/>
      </items>
    </Menu>
  </menus>
</MenuBar>
